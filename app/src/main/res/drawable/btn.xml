<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="@color/btn_bkg"
                android:startColor="@color/btn_bkg"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_bkg" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/btn_bkg"
                android:startColor="@color/btn_bkg"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_bkg" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:endColor="@android:color/transparent"
                android:startColor="@android:color/transparent"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/btn_bkg" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

</selector>